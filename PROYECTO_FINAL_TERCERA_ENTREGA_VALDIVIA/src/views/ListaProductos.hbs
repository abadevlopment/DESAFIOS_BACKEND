{{#if ProductsQty}}
<div class="container-fluid p-3 bg-secondary">
  <div class="p-5 bg-light rounded-5 border border-primary">
    <div class="row">
      <div class="col border border-primary text-center rounded-5 fw-bold">
        <h1>BIENVENIDO</h1>
      </div>
      <div class="col text-center">
        <div class="row">
          <div class="col text-center">
            <form
									class="form"
									action="user/login"
									method="GET"
									role="form"
									autocomplete="off"
								>
									<input
										class="btn btn-success"
										type="submit"
										value="Iniciar sesión"
									/>
								</form>
              {{!-- <button 
              class="btn btn-primary"
              onclick="location.href = '/login'"
              >Iniciar sesión</button> --}}
          </div>
          <div class="col text-center">
            <button 
              class="btn btn-warning"
              onclick="location.href = '/register'"
              >Registrarse</button>
          </div>
          <div class="col text-center">
            {{!-- Extra --}}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="p-5 bg-light rounded-5">
    <h1>Listado de productos</h1>
    <br />
    <div class="container-fluid p-5 bg-primary rounded-5 row">
      {{#each Products}}
        <div class="card m-3" style="width: 18rem;">
          <img src={{this.thumbnail}} class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">S/.{{this.price}}</p>
            <p class="card-text">Id:{{this.id}}</p>
            {{!-- <a href="#" class="btn btn-primary">Agregar al carrito</a> --}}
          </div>
        </div>
      {{/each}}
    {{else}}
      <h2 style={color: 'red'}>No se encontraron productos</h2>
    {{/if}}
  </div>
  </div>
</div>

