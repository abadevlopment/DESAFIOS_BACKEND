<div class="container my-5">
	<div class="jumbotron">

		<h1>REGISTRARSE</h1>
		<br />
		<form
			class="form"
			action="/register"
			method="post"
			role="form"
			autocomplete="off"
		>

			<div class="form-group">
				<input
					id="correo"
					name="username"
					placeholder="correo"
					class="form-control"
					type="email"
					autofocus
					required
				/>
			</div>

			<div class="form-group">
				<input
					id="password"
					name="password"
					placeholder="password"
					class="form-control"
					type="password"
					required
				/>
			</div>

			<div class="form-group">
				<input
					class="btn btn-success my-3"
					type="submit"
					value="Registrarse"
				/>
			</div>
		</form>

		<hr />

		<div class="text-left">
			<button
				class="btn btn-warning my-3"
				onclick="location.href = '/login'"
			>Iniciar Sesi√≥n</button>
		</div>

	</div>
</div>